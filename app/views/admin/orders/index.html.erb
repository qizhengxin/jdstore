<div class="col-md-12">

  <h2 class="text-center"> 全部订单 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 序号 </th>
        <th> 产品 </th>
        <th> 价格 </th>
        <th> 付款方式 </th>
        <th> 付款状态 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td> <%= order.id %> </td>
          <td> <%= order.billing_name %> </td>
          <td> <%= order.total %> </td>
          <td> <%= order.payment_method %> </td>
          <td> <%= order.is_paid %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
